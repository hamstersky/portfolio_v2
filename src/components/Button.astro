---
const { type } = Astro.props;

const textColor =
  type === 'primary' ? 'text-white hover:text-primary' : 'text-primary hover:text-white';
const backgroundColor =
  type === 'primary' ? 'group-hover:bg-white' : 'bg-white group-hover:bg-opacity-0';
---

<button
  class={`${textColor} group w-fit relative inline-flex items-center justify-center overflow-hidden rounded-lg bg-gradient-to-br from-primary to-secondary p-0.5 font-medium group-hover:from-primary group-hover:to-secondary md:max-w-fit`}
>
  <span
    class={`${backgroundColor} relative w-full h-full rounded-md px-5 py-2.5 transition-all duration-75 ease-in`}
  >
    <slot />
  </span>
</button>
